# API Gateway variables
api_gateway_vars:
  # Test environment variables
  - var_name: "TEST_RABBITMQ_HOST"
    var_value: "billing-queue"
  - var_name: "TEST_RABBITMQ_PORT"
    var_value: "5672"
  - var_name: "TEST_RABBITMQ_USER"
    var_value: "your_rabbitmq_username"
